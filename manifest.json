{
  "manifest_version": 3,
  "name": "MReader",
  "version": "1.0",
  "description": "",
  "permissions": [
    "webRequest", 
    "scripting",
    "storage"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "options_ui": {
      "open_in_tab": false,
      "page": "options.html"
   },
  "content_scripts": [
    {
  "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}